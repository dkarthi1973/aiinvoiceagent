# Environment Configuration Template
# Copy this file to .env and update the values

# Application Settings
APP_NAME=AI Invoice Processing Agent
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Dashboard Settings
DASHBOARD_PORT=8501

# File Processing Settings
INCOMING_FOLDER=./incoming
GENERATED_FOLDER=./generated
LOG_FOLDER=./logs
MAX_FILE_SIZE_MB=10
SUPPORTED_FORMATS=jpg,jpeg,png,pdf,tiff

# AI Model Settings
# Configure your AI model settings here
# For Ollama integration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2-vision

# Logging Settings
LOG_LEVEL=INFO
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Processing Settings
BATCH_SIZE=10
PROCESSING_INTERVAL_SECONDS=5
MAX_RETRY_ATTEMPTS=3

# Database Settings (if needed for future expansion)
DATABASE_URL=sqlite:///./invoice_processing.db

# Timeout Settings (in seconds)
AI_PROCESSING_TIMEOUT_SECONDS=1800
OLLAMA_REQUEST_TIMEOUT_SECONDS=3600
FILE_PROCESSING_TIMEOUT_SECONDS=2400